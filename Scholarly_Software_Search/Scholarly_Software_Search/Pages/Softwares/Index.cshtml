                @Html.DisplayFor(modelItem => item.CitedArticles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.UrlAddress">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.UrlAddress">Details</a> |
